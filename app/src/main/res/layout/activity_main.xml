<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/mainpoto"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:padding="25dp"
            android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardAbcd"
            android:layout_width="match_parent"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:layout_height="100dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:src="@drawable/abcd"/>

                <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Alphabets"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:textColor="#DF0B0B"
                    android:textSize="27sp"

                  />

            </LinearLayout>


        </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:id="@+id/bodyPart"
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:layout_marginTop="20dp"
                android:layout_height="100dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView

                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/body"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Body Parts Name"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#DF0B0B"
                        android:textSize="27sp"
                        android:layout_marginTop="4dp"



                 />

                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/CountTable"
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:layout_marginTop="20dp"
                android:layout_height="100dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/table"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Counting Table"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:textColor="#DF0B0B"
                        android:gravity="center"
                        android:textSize="27sp"
                     />

                </LinearLayout>


            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:id="@+id/cardFruit"
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:layout_marginTop="20dp"
                android:layout_height="100dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/fruit"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Fruits Name"
                        android:textStyle="bold"
                        android:textColor="#DF0B0B"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:textAllCaps="false" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:id="@+id/cardFamily"
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:layout_marginTop="20dp"
                android:layout_height="100dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/family"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Relation Name"
                        android:textStyle="bold"
                        android:textColor="#DF0B0B"
                        android:textSize="27sp"
                        android:gravity="center"

                      />

                </LinearLayout>


            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:id="@+id/cardDays"
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:layout_marginTop="20dp"
                android:layout_height="100dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/days"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Days Name"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#DF0B0B"
                        android:textSize="27sp"

                        />

                </LinearLayout>


            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:id="@+id/cardAnimals"
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:layout_marginTop="20dp"
                android:layout_height="100dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/animal"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Wild Animals"
                        android:textStyle="bold"
                        android:textColor="#DF0B0B"
                        android:textSize="27sp"
                        android:fontFamily="sans-serif"
                      android:gravity="center"
                       />

                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardBirds"
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                app:cardElevation="20dp"
                android:layout_marginTop="20dp"
                android:layout_height="100dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/birds"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Birds Name"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:fontFamily="sans-serif"
                        android:textColor="#DF0B0B"
                        android:textSize="27sp"
                        />

                </LinearLayout>


            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:id="@+id/cardMonths"
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                app:cardElevation="20dp"
                android:layout_marginTop="20dp"
                android:layout_height="100dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/months"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Months Name"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:fontFamily="sans-serif"
                        android:textColor="#DF0B0B"
                        android:textSize="27sp"
                        />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardVegetable"
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                app:cardElevation="20dp"
                android:layout_marginTop="20dp"
                android:layout_height="100dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/vegetable"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Vegetable Name"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:fontFamily="sans-serif"
                        android:textColor="#DF0B0B"
                        android:textSize="27sp"
                        />

                </LinearLayout>


            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:id="@+id/cardSpices"
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                app:cardElevation="20dp"
                android:layout_marginTop="20dp"
                android:layout_height="100dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/spices"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Spices Name"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:fontFamily="sans-serif"
                        android:textColor="#DF0B0B"
                        android:textSize="27sp"
                        />

                </LinearLayout>


            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:id="@+id/cardItems"
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                app:cardElevation="20dp"
                android:layout_marginTop="20dp"
                android:layout_height="100dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/items"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Daily use items"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:fontFamily="sans-serif"
                        android:textColor="#DF0B0B"
                        android:textSize="27sp"
                        />

                </LinearLayout>


            </androidx.cardview.widget.CardView>





        </LinearLayout>
    </ScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>